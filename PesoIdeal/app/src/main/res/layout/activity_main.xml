<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Peso Ideal IMC"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Idade"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_Idade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu Peso"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Peso (kg)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_Peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu Peso"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Altura (mt)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_Altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua altura"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sexo" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_Mulher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menina" />

        <RadioButton
            android:id="@+id/radio_Homem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menino" />

        <RadioButton
            android:id="@+id/radio_Adulto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adulto" />
    </RadioGroup>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_retangle"
        android:text="Calcular IMC" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/situacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="invisible"/>

</LinearLayout>